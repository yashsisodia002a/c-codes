#include<iostream>
using namespace std;

void isPrime(int n);
void isPrime(int n, bool& flag);

void isPrime(int n)
{
    bool flag=true;
    isPrime(n, flag);

    if(flag&& n> 1)
    cout<<"Number is prime ";
    else
    cout<<"Number is not prime ";

}
void isPrime(int n, bool &flag)
{
    for (int i=2; i<=n/2; i++)
    {
        if(n%i ==0)
        {
            flag= false;
            break;
        }
    }
}
int main(){
    int num;
    cout<<"Enter a number";
    cin>>num;

    isPrime(num);

    return 0;
}
