s// Overloading using Recursive & Iterative Functions

#include <iostream>
using namespace std;

// Iterative factorial function
int fact(int n)
{
    int f = 1;
    for(int i = 1; i <= n; i++)
        f *= i;
    return f;
}

// Recursive factorial function (overloaded)
int fact(int n, int temp)
{
    if(n == 0)
        return temp;
    return fact(n - 1, temp * n);
}

int main()
{
    int num = 7;

    cout << "Iterative Factorial = " << fact(num) << endl;
    cout << "Recursive Factorial = " << fact(num, 1);

    return 0;
}
