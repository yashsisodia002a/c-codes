#include<iostream>
using namespace std;

bool isPrime (int n);
bool isPrime(int n, int i);
bool isPrime(int n)
{
    if(n<=1)
    return false;
    return isPrime(n, 2);
}
bool isPrime(int n, int i)
{
    if(i ==n)
    return true;

    if(n%i ==0)
    return false;

    return isPrime(n, i+1);

}
int main(){
    int num;
    cout<<"Enter in number";
    cin>>num;

if(isPrime(num))
cout<<"Number is Prime";
else
cout<<"Number is not Prime";

return 0;
}
