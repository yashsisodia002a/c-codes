//for prime number function with Default Argument
#include<iostream>
using namespace std;

bool isprime (int n,int i=2)
{
    if(n<=1)
    return false;

    if(i==n)
    return true;

    if(n%i==0)
    return false;

    return isprime(n, i+1);
}
int main(){
    int num;
    cout<<"Enter the name";
    cin>>num;
    if(isprime(num))
    cout<<"Number is prime";
    else
    cout<<"Number is not prime";

    return 0;
}
